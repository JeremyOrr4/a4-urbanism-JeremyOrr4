  <version>1.0</version>
  <artifactId>2aa4.mesh.pathfinder</artifactId>
  <name>McMaster :: CAS :: 2AA4 :: A3 :: pathfinder</name>

 
  <dependencies>
    <!-- <dependency>
      <groupId>io.github.ace-design</groupId>
      <artifactId>2aa4.mesh.island</artifactId>
